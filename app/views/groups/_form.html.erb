<%= form_for @group, :html => {:multipart => true, :class => "form"} do |f| %>
  <% if @group.errors.any? %>
    <h2><%= pluralize(@group.errors.count, 'error') %> stop this group being saved:</h2>
    <% @group.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>
  <p><%= f.label :description %>
  <%= f.text_area :description %></p>
  <p><%= f.label :icon %>
  <%= f.file_field :icon %></p>
  <p><%= f.submit 'save' %></p>
<% end %>
